    #include <iostream>
    #include <cmath>
    using namespace std;
     
    int main() {
    	
    	
    	int n;
    	scanf("%d",&n);
    	
    	if(n%2!=0)
    		cout<<'0'<<endl;
    	else{
    		long long int x=pow(2,n/2);
    		cout<<x<<endl;
    	}
    		
    		
    		
    	return 0;
    }



